.wrapper
  = render "title_bar"
.contents.row
  .container
    = form_with(model: @tweet, local: true) do |form|
      %h3 投稿する
      = form.text_field :title, placeholder: "title"
      = form.label :image
      = form.file_field :image
      = form.hidden_field :image_cache # 後述
      = form.text_area :text, placeholder: "text", rows: "10"
      = form.submit "SEND"
