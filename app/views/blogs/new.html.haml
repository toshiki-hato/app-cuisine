= form_with(model: @blog, local: true) do |form|
  .title
    = form.label :title
    = form.text_field :title
    = @tweet.title
    = @tweet.text
    = image_tag @tweet.image.url
  .time
    = form.label :start_time
    = form.datetime_select :start_time
  .content
    = form.label :content
    = form.text_field :content
  .submit
    = form.submit
